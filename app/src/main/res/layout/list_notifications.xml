<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/info"
            android:layout_margin="5dp"
            android:id="@+id/iconNotifications"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/nameCollegeAdded"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/iconNotifications"
            android:text="@string/college_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nameCollege"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/nameCollegeAdded"
            android:textSize="10sp"
            android:layout_toEndOf="@+id/iconNotifications"
            android:text="@string/it_college_has_been_added_to_the_colleges_go_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />
    </RelativeLayout>

</RelativeLayout>