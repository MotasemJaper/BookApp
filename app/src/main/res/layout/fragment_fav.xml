<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.Fragment.FavFragment">

    <EditText
        android:id="@+id/searchCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_edittext01"
        android:drawableEnd="@drawable/searchicon"
        android:hint="@string/search_book_here"
        android:padding="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFav"
        tools:listitem="@layout/list_pdf_view"
        android:layout_below="@+id/searchCourse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>